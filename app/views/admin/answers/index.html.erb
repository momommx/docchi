<div class="container">
  <div class="row my-3">
    <h4>回答一覧</h4><br>
    
    <table class="table table-hover table-inverse">
      <tbody>
        <thead>
          <tr>
            <th>投稿日時</th>
            <th>内容</th>
            <th>作成者</th>
            <th></th>
          </tr>
        </thead>
        <% @answers.each do |answer| %>
          <tr>
            <td><%= answer.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= answer.answer_content %></td>
            <td><%= answer.user.name %>さん</td>
            <td>
              <%= link_to '削除', admin_answer_path(answer.id), class:"btn btn-outline-danger rounded-pill", method: :delete, "data-confirm" => "削除しますか？" %>
            </td>
          </tr>
        <% end %>
      </tbody>
   </table>
  </div>   
</div>
