<div class="container">
  <div class="row my-3">
    <div class="float-left mr-auto py-1 mb-4 header-bubble" style="width:20%">
      <h4><b>ジャンル一覧</b></h4>
    </div>
  </div>
  
  <!-- ジャンル名投稿フォーム -->
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true, method: :post do |f| %>
      ジャンル名 <%= f.text_field :name %> 
      <%= f.button :type => "submit", class: 'btn btn-bd-orange rounded-pill' do %>
        <i class="fa-solid fa-plus"></i>
        追加
      <% end %>
    <% end %>
  </div></br>
  
  <div class="row" style="width:50%">
    <table class='col table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to admin_genre_path(genre.id), method: :delete, class:"btn btn-outline-danger rounded-pill", data: {confirm: "本当にジャンルを消しますか？"} do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>           
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
