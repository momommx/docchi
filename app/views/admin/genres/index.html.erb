<div class="container">
  <div class="row">
    <h4 class="font-weight-bold pt-5">ジャンル一覧</h4>
  </div></br>

<!-- ジャンル名投稿フォーム -->
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true, method: :post do |f| %>
      ジャンル名 <%= f.text_field :name %> 
      <%= f.submit '追加する', class: 'btn btn-success' %>
    <% end %>
  </div></br>
  
  <div class="row">
    <table class='col table table-hover table-inverse'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, data: {confirm: "本当にジャンルを消しますか？"}, class: 'btn btn-outline-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
