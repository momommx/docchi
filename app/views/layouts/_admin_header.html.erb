<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-warning navbar-fixed-top">
    <div class="navbar-brand">
      <%= link_to root_path do %>
        <%= image_tag 'logo.png', size: '70x70' %>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">      
      <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="nav-item" style="list-style: none">
            <%= link_to admin_answers_path, class: 'nav-link text-light' do %>
              <i class="fa-regular fa-comments"></i> 回答一覧
            <% end %>
          </li>
          <li class="nav-item" style="list-style: none">
            <%= link_to admin_users_path, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-users-gear"></i> ユーザー一覧
            <% end %>
          </li>
          <li class="nav-item"  style="list-style: none">
            <%= link_to admin_genres_path, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-tags"></i> ジャンル一覧
            <% end %>
          </li>
          <li class="nav-item"  style="list-style: none">
            <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-right-from-bracket"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item" style="list-style: none">
            <%= link_to new_user_registration_path, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-user-plus"></i> ユーザー登録
            <% end %>          
          </li>
          <li class="nav-item" style="list-style: none">
            <%= link_to new_user_session_path, class: 'nav-link text-light' do %>
              <i class="fa-solid fa-right-to-bracket"></i> ログイン
            <% end %>            
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>

<!--フラッシュメッセージ-->
<div class="flash-notifications">
  <% flash.each do |key, value| %>
   <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>
