<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>お題</th>
      <th>ジャンル</th>
      <th>いいね</th>
      <th>発言人数</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
        <td>
          <%= link_to topic.topic_title, public_topic_path(topic.user) do %>
            <%= topic.topic_title %>
          <% end %>
        </td>
        
        <td><%= topic.genre.name %></td>
        
        <td id="favorite-btn<%= topic.id %>">
          <%#= render 'favorites/favorite-btn', topic: topic %>
        </td>
        
        <td id="answer_count">
          <%#= render 'answers/answer_count', topic: topic %>
        </td>

        <td>
            回答してみる！ボタン
        </td>
        <td>
            削除ボタン
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>