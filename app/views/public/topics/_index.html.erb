<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>作成日</th>
      <th>お題</th>
      <th>ジャンル</th>
      <th>いいね</th>
      <th>発言人数</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
        <td>
          <%= topic.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
          <%= link_to public_topic_path(topic.id) do %>
            <%= topic.topic_title %>
          <% end %>
        </td>
        
        <td><%= topic.genre.name %></td>
        
        <td id="favorite-btn<%= topic.id %>">
          <%= render 'public/favorites/favorite-btn', topic: topic %>
        </td>
        
        <td id="answer_count">
          <%#= render 'public/answers/answer_count', topic: topic %> 
          <%= topic.answers.count %>人
        </td>

        <td>          
          <% if topic.user == current_user %>
            <%= link_to '削除', public_topic_path(topic.id), method: :delete, class:"btn btn-outline-danger rounded-pill", data: {confirm: "ご意見も一緒に削除されますがよろしいですか？"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>