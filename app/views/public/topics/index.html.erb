<div class="container">
  <div style="d-flex flex-column justify-content-start">
    <div class="row">
      <%= link_to 'お題を作る', new_public_topic_path, class: "btn btn-success" %>
    </div>
    
    <div class='container px-5 px-sm-0'>
      <div class='row'>
        <div class='col-md-10 mx-auto'>
          <h2>お題一覧</h2>
          <%= link_to '新着順', public_topics_path %>
          |<%= link_to '発言数順', public_topics_path(sort: "answer_count") %>
          
          <%= render 'index', topics: @topics, user: @user %>
        </div>
      </div>　
    </div>
  </div>
</div>