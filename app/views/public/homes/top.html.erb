<!--フラッシュメッセージ(devise-->
<div class="flash-notifications">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: key) %>
  <% end %>
</div>

<div class="container">
  <div class="row mt-3">
    <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6'>
      <div class="btn-wrapper col-10 mx-auto">
        <div style="text-align: center;">
          <%= image_tag 'logo-md.png' %>
        </div>
        <% unless user_signed_in? %>  <!--ログイン中はログインボタン３つ非表示にする-->
          <div class="row mt-3">
            <%= link_to users_guest_sign_in_path, class: "btn btn--green btn--radius btn--cubic btn-block mb-3", method: :post  do %>
              ゲストログイン（閲覧用）
              <i class="fa-solid fa-angle-right" style="text-align: right"></i>
            <% end %>
          </div>
          <div class="row">
            <%= link_to new_user_session_path, class: "btn btn--blue btn--radius btn--cubic btn-block mb-3" do %>
              ログイン
              <i class="fa-solid fa-angle-right" style="text-align: right"></i>
            <% end %>          
          </div>
          <div class="row">
            <%= link_to new_user_registration_path, class: "btn btn--red btn--radius btn--cubic btn-block" do %>
              ユーザー登録
              <i class="fa-solid fa-angle-right" style="text-align: right"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>