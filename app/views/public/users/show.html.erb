<p>public/users/show.html.erb</p>
<div class="container">
    <div class="mt-4">
        <h4><span class ="marker-green"><%= @user.name %>さんのページ</span></h4>
        <div class="mb-2 d-md-flex justify-content-md-end">
            <% if @user.id == current_user.id %>    
                <%= link_to "いいねしたお題", favorites_public_user_path(@user), class:"btn btn-success rounded-pill" %>
            <% end %>
        </div>
        <%= render partial: 'topics', locals: { topics: @topics, user: @user } %>
    </div>   
</div>