<div class="container">
    <div class="row align-items-center mt-3">
        <div class="mr-auto py-1 mb-4 header-bubble" style="width:20%">
           <h5><b><%= @user.name %>さんのページ</b></h5>
        </div>
        <div class="col d-md-flex justify-content-md-end">
            <% if @user.id == current_user.id %>    
                <%= link_to "いいねしたお題", favorites_public_user_path(@user), class:"btn btn-success rounded-pill" %>
            <% end %>
        </div>
        <%= render partial: 'topics', locals: { topics: @topics, user: @user } %>
    </div>   
</div>